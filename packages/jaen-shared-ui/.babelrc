{
  "presets": [["@babel/preset-react", {"runtime": "automatic"}]],
  "plugins": [
    "inline-react-svg",
    [
      "babel-plugin-relative-path-import",
      {
        "paths": [
          {
            "rootPathPrefix": "@src",
            "rootPathSuffix": "src"
          },
          {
            "rootPathPrefix": "@assets",
            "rootPathSuffix": "src/common/assets"
          },
          {
            "rootPathPrefix": "@components",
            "rootPathSuffix": "src/components"
          },
          {
            "rootPathPrefix": "@language-mode",
            "rootPathSuffix": "src/language-mode"
          }
        ]
      }
    ]
  ]
}
